{% extends 'base.twig' %}

{% block title %}
    Détails de l'utilisateur
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Détails de l'utilisateur</h1>
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Mail :</dt>
                    <dd class="col-sm-8">{{ user.mail }}</dd>
                </dl>
            </div>
        </div>

        <div class="mt-4">
            <h2>Entrées de l'utilisateur</h2>
            {% if user.entrees is empty %}
                <p>Aucune entrée disponible pour cet utilisateur.</p>
            {% else %}
                <ul>
                    {% for entree in user.entrees %}
                        <li>{{ entree.nom }} - {{ entree.prenom }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>

     
    </div>
{% endblock %}
