{% extends 'base.twig' %}

{% block title %}
    CreationEntree - Annuaire
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h2 class="text-center">Créer une entrée</h2>
        
        {% if action == 'publier' %}
            <div class="alert alert-success" role="alert">
                Entrée publiée avec succès !
            </div>
        {% elseif action == 'depublier' %}
            <div class="alert alert-success" role="alert">
                Entrée dépubliée avec succès !
            </div>
        {% else %}
            <div class="alert alert-success" role="alert">
                Action réalisée avec succès !
            </div>
        {% endif %}
    </div>
{% endblock %}
