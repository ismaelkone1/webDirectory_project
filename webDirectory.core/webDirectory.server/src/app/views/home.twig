{% extends 'base.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<form>
  <fieldset>
    <legend class="mt-4 text-center">Formulaire admin</legend>
    <div class="container">
    <div>
      <label for="labelEmail" class="form-label mt-3">Adresse Email</label>
      <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Entrez votre email">
    </div>
    <div>
      <label for="labelPWD" class="form-label mt-4">Mot de passe</label>
      <input type="password" class="form-control" id="inputPWD" placeholder="Entrez votre mot de passe" autocomplete="off">
    </div>
    <div class="container text-center">
    <button type="submit" class="btn btn-primary mt-4">Connexion</button>
    </div>
    </div>
  </fieldset>
</form>
{% endblock %}
