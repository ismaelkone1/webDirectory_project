{% extends "base.twig" %}

{% block title %}
	CreationEntree - Annuaire
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h2 class="text-center">Créer une entrée</h2>
		<form action="/creationEntree" method="post" enctype="multipart/form-data">
			<div class="form-group mt-2">
				<label for="nom">Nom</label>
				<input type="text" class="form-control" id="nom" name="nom" required>
			</div>
			<div class="form-group mt-2">
				<label for="prenom">Prénom</label>
				<input type="text" class="form-control" id="prenom" name="prenom" required>
			</div>
			<div class="form-group mt-2">
				<label for="fonction">Fonction</label>
				<input type="text" class="form-control" id="fonction" name="fonction" required>
			</div>
			<div class="form-group mt-2">
				<label for="numBureau">Numéro de bureau</label>
				<input type="number" class="form-control" id="numBureau" name="numBureau" required>
			</div>
			<div class="form-group mt-2">
				<label for="email">Email</label>
				<input type="email" class="form-control" id="email" name="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
			</div>
			<div class="form-group mt-2">
				<label for="urlImage">Insérer une image</label>
				<input type="file" class="form-control" id="urlImage" name="urlImage" accept="image/*">
			</div>
			<div class="form-group mt-2">
				<input type="hidden" class="form-control" name="csrf" value="{{ csrf }}" required>
			</div>
			<button type="submit" class="btn btn-primary mt-3">Créer l'utilisateur</button>
		</form>
	</div>

{% endblock %}
